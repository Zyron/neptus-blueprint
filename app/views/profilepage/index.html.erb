

<div class="container">

  <div class="row">
    <div class="col-md-8">
      <%= form_tag profilepage_index_path, :method => :get, :id => 'requirements_form' do -%>
      <!--  University Requirements  -->     
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">University Requirements</h3>
        </div>
        <div class="panel-body">
          <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow= "60" aria-valuemin="0" aria-valuemax="100" style= "width: <%= @university_req_rate %>%" >
              <span><strong><%= @university_req_rate %>% Completed</strong></span>
            </div>
          </div>

          <%= hidden_field_tag 'requirements[entry_level_writing]', 0 %>
          <%= check_box_tag "requirements[entry_level_writing]", 1, @user[:entry_level_writing], :id => "requirements_entry_level_writing" %>
          <%= 'Entry-Level Writing Satisfied' %>
          
          <br>
          <%= hidden_field_tag 'requirements[american_history_and_institutions]', 0 %>
          <%= check_box_tag 'requirements[american_history_and_institutions]', 1, @user[:american_history_and_institutions],:id => 'requirements_american_history_and_institutions' %>
          <%= 'American History and Institutions Satisfied' %>
        </div>
      </div>
      <!-- End of University Requirements -->

      <!-- Campus Requirements -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Campus Requirements</h3>
        </div>
        <div class="panel-body">
          <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow= "60" aria-valuemin="0" aria-valuemax="100" style= "width: <%= @campus_req_rate %>%" >
              <span><strong><%= @campus_req_rate %>% Completed</strong></span>
            </div>
          </div>
          <%= hidden_field_tag 'requirements[american_cultures]', 0 %>
          <%= check_box_tag 'requirements[american_cultures]', 1, @user[:american_cultures], :id => 'requirements_american_cultures' %>
          <%= 'American Cultures Satisfied' %>
        </div>
      </div>
      <!-- End of Campus Requirements -->

      <!-- LS College Requirements -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">L&S College Requirements</h3>
        </div>
        <div class="panel-body">
          <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success"  role="progressbar" aria-valuenow= "60" aria-valuemin="0" aria-valuemax="100" style= "width: <%= @ls_college_req_rate %>%" >
              <span><strong><%= @ls_college_req_rate %>% Completed</strong></span>
            </div>
          </div>

          <%= hidden_field_tag 'requirements[reading_and_composition]', 0 %>
          <%= check_box_tag 'requirements[reading_and_composition]', 1,@user[:reading_and_composition], :id => 'requirements_reading_and_composition' %>
          <%= 'Reading & Composition Requirements Satisfied' %>
          
          <br>
          <%= hidden_field_tag 'requirements[quantitative_reasoning]', 0 %>
          <%= check_box_tag 'requirements[quantitative_reasoning]', 1,@user[:quantitative_reasoning], :id => 'requirements_quantitative_reasoning' %>
          <%= 'Quantitative Reasoning Requirements Satisfied' %>
          
          <br>
          <%= hidden_field_tag 'requirements[foreign_language_breadth]', 0 %>
          <%= check_box_tag 'requirements[foreign_language_breadth]', 1,@user[:foreign_language_breadth], :id => 'requirements_foreign_language_breadth' %>
          <%= 'Foreign Language Requirements Satisfied' %>
          
          <div class="col-lg-9">
            <h4>Seven Breath Requirements</h4>
            <%= hidden_field_tag 'requirements[arts_and_literature]', 0 %>
            <%= check_box_tag 'requirements[arts_and_literature]', 1,@user[:arts_and_literature], :id => 'requirements_arts_and_literature' %>
            <%= 'Arts and Literature Satisfied' %>

            <br>
            <%= hidden_field_tag 'requirements[biological_science]', 0 %>
            <%= check_box_tag 'requirements[biological_science]', 1,@user[:biological_science], :id => 'requirements_biological_science' %>
            <%= 'Biological Science Satisfied' %>

            <br>
            <%= hidden_field_tag 'requirements[historical_studies]', 0 %>
            <%= check_box_tag 'requirements[historical_studies]', 1,@user[:historical_studies], :id => 'requirements_historical_studies'%>
            <%= 'Historical Studies Satisfied' %>
            
            <br>
            <%= hidden_field_tag 'requirements[international_studies]', 0 %>
            <%= check_box_tag 'requirements[international_studies]', 1,@user[:international_studies], :id => 'requirements_international_studies'%>
            <%= 'International Studies Satisfied' %>

            <br>
            <%= hidden_field_tag 'requirements[philosophy_and_values]', 0 %>
            <%= check_box_tag 'requirements[philosophy_and_values]', 1,@user[:philosophy_and_values], :id => 'requirements_philosophy_and_values' %>
            <%= 'Philosophy and Values Satisfied' %>
            
            <br>
            <%= hidden_field_tag 'requirements[physical_science]', 0 %>
            <%= check_box_tag 'requirements[physical_science]', 1,@user[:physical_science], :id => 'requirements_physical_science'%>
            <%= 'Physical Science Satisfied' %>
            
            <br>
            <%= hidden_field_tag 'requirements[social_and_behavioral_sciences]', 0 %>
            <%= check_box_tag 'requirements[social_and_behavioral_sciences]', 1,@user[:social_and_behavioral_sciences], :id => 'requirements_social_and_behavioral_sciences' %>
            <%= 'Social and Behavioral Sciences Satisfied' %>
          </div>
        </div>
        <!-- End of LS College Requirements -->


      </div>

      <%= submit_tag 'Save', :id => 'requirements_submit', :class => "btn btn-primary btn-block" %>  
      <% end -%>
    </div>  

    <div class="col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Student Profile</h3>
        </div>

        <div class="panel-body">

          <div class="panel panel-default">
            <div class="panel-heading">Name</div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">College</div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">Entrance Year</div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">Expected Year of Graduation</div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
          </div>
          <div class="panel panel-default">
            <div class="panel-heading">Major</div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
          </div>

          <%= button_to 'Edit Information', 'editprofile', :class => "btn btn-primary btn-block"%> 
        </div>
      </div>
    </div>
  </div>


  <%= params %>