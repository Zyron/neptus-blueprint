<div class="container">
  <div class="row">
    <div class="col-md-8">

      <div class="panel-group" id="accordion">
      <%= form_tag profilepage_index_path, :method => :get, :id => 'requirements_form' do -%>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">University Requirement</a>
            </h3>
          </div>
          <div class="progress progress-striped active">
            <div class="progress-bar"  role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
              <span class="sr-only">50% Complete</span>
            </div>
          </div>
          <div id="collapseOne" class="panel-collapse collapse in">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">

                  <%= check_box_tag 'requirements_entry_level_writing', 1, :true, :id => 'requirements_entry_level_writing' %>
                  <%= 'Entry-Level Writing Satisfied' %>
                  <br>
                  <%= check_box_tag 'requirements_american_history_and_institutions' %>
                  <%= 'American History and Institutions Satisfied' %>
                </div><!-- /.col-lg-6 -->
              </div>
            </div>
          </div>
        </div>  

        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">Campus Requirement</a>
            </h2>
          </div>
          <div class="progress progress-striped active">
            <div class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
              <span class="sr-only">100% Complete</span>
            </div>
          </div>    
          <div id="collapseTwo" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <%= check_box_tag 'requirements_american_cultures' %>
                  <%= 'American Cultures Satisfied' %>
                </div><!-- /.col-lg-6 -->
              </div>
            </div>
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">College Requirement</a>
            </h2>
          </div>
          <div class="progress progress-striped active">
            <div class="progress-bar"  role="progressbar" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" style="width: 35%">
              <span class="sr-only">35% Complete</span>
            </div>
          </div>    
          <div id="collapseThree" class="panel-collapse collapse">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-9">
                  <%= check_box_tag 'requirements_reading_and_Composition_requirements' %>
                  <%= 'Reading & Composition Requirements Satisfied' %>
                  <br>
                  <%= check_box_tag 'requirements_quantitative_reasoning_requirements' %>
                  <%= 'Quantitative Reasoning Requirements Satisfied' %>
                  <br>
                  <%= check_box_tag 'requirements_foreign_language_requirements' %>
                  <%= 'Foreign Language Requirements Satisfied' %>
                  <div class="col-lg-9">
                    <h4>Seven Breath Requirements</h4>
                      <%= check_box_tag 'requirements_arts_and_literature' %>
                      <%= 'Arts and Literature Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_biological_science' %>
                      <%= 'Biological Science Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_historical_studies' %>
                      <%= 'Historical Studies Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_international_studies' %>
                      <%= 'International Studies Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_philosophy_and_values' %>
                      <%= 'Philosophy and Values Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_physical_science' %>
                      <%= 'Physical Science Satisfied' %>
                      <br>
                      <%= check_box_tag 'requirements_social_and_behavioral_sciences' %>
                      <%= 'Physical Sciences Satisfied' %>
                  </div>
                </div><!-- /.col-lg-6 -->
              </div>
            </div>
          </div> 
        </div> 
        <%= submit_tag 'Save', :id => 'requirements_submit', :class => "btn btn-success" %>  
      <% end -%>
      <%= "here is the test:"%>
      <%= @completed_requirements %>
      </div>
    </div>  
    <div class="col-md-2">
      <div class="list-group">
        <h5><span class="list-group-item">Name</span></h5>
        <h5><span class="list-group-item">College</span></h5>
        <h5><span class="list-group-item">Entrance Year</span></h5>
        <h5><span class="list-group-item">Expected year of Graduation</span></h5>
        <h5><span class="list-group-item">Major</span></h5>
        <h5><span class="list-group-item">BluePrint</span></h5>
    </div>

  </div>

</div>












